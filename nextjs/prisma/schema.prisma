generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  username       String  @unique
  email          String?
  hashedPassword String?
}

model Movie {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ttid         String   @unique
  description  String
  img_high     String
  link         String
  rating_count Int
  rating_value Float
  release_date String
  runtime      String
  title        String
  trailer      String
  type         String
  genres       String[]
}
